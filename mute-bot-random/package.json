{
  "name": "mute-bot-random",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node dist/bot-replay.js",
    "dev": "nodemon --watch src -e js,ts --exec 'npm run build && chmod +x dist/bot-replay.js && node dist/bot-replay.js --cors --logLevel trace | bunyan'",
    "build": "webpack",
    "lint": "tslint --fix -p tsconfig.json 'src/**/*.ts' -e 'src/**/*.proto' -e 'src/**/*.d.ts' && prettier --write --list-different 'src/**/*.ts' './*.{ts,js,json,md}'  && markdownlint ./*.md -i 'CHANGELOG.md'",
    "proto": "pbjs -t static-module -w es6 --no-verify --no-delimited --no-convert src/proto/index.proto -o src/proto/index.es6.js && pbts src/proto/index.es6.js -o src/proto/index.d.ts",
    "postproto": "babel --presets env -o src/proto/index.js src/proto/index.es6.js && rm src/proto/index.es6.js",
    "cz": "git-cz",
    "precommit": "lint-staged && npm run build && git add dist/*",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "prerelease": "npm run build && git add dist/*",
    "release": "standard-version --no-verify"
  },
  "files": [
    "dist/server.js"
  ],
  "keywords": [
    "bot",
    "crdt",
    "peer-network"
  ],
  "author": "CÃ©dric Enclos (cedric.enclos@loria.fr)",
  "engines": {
    "node": ">=8.1.4"
  },
  "license": "AGPL-3.0",
  "dependencies": {
    "@coast-team/mute-core": "file:../mute-core/coast-team-mute-core-0.0.0-development.tgz",
    "@coast-team/mute-crypto": "^0.4.1",
    "commander": "^2.19.0",
    "node-webcrypto-ossl": "^1.0.39",
    "protobufjs": "^6.8.8",
    "rxjs": "6.4.0",
    "ws": "^6.1.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.5.0",
    "@commitlint/config-conventional": "^7.5.0",
    "@types/node": "^8.10.29",
    "@types/ws": "^6.0.1",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "commitizen": "^2.10.1",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2",
    "markdownlint-cli": "^0.13.0",
    "prettier": "^1.16.4",
    "standard-version": "^4.4.0",
    "ts-loader": "^5.0.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.1",
    "validate-commit-msg": "^2.11.1",
    "webpack": "^4.17.2",
    "webpack-cli": "^3.1.0",
    "webpack-node-externals": "^1.7.2"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "linters": {
      "*.md": [
        "prettier --write --list-different",
        "git add",
        "markdownlint -i 'CHANGELOG.md'"
      ],
      "*.ts": [
        "tslint --fix -p tsconfig.json -e src/proto/* -e 'src/**/*.d.ts'",
        "git add"
      ],
      "*.{ts,json,scss,css}": [
        "prettier --write --list-different -e *proto*",
        "git add"
      ]
    },
    "concurrent": false
  }
}
